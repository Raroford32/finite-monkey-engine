# Advanced Agentic Exploit Discovery System (AAEDS) Configuration
# Copy this file to .env and fill in your actual values

# OpenRouter.ai Configuration
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_API_URL=https://openrouter.ai/api/v1
LLM_MODEL=openai/gpt-5
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=4096

# Blockchain Configuration
ETH_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
BSC_RPC_URL=https://bsc-dataseed.binance.org/
POLYGON_RPC_URL=https://polygon-rpc.com/

# Fork Configuration
FORK_BLOCK_NUMBER=latest
FORK_CHAIN_ID=1

# Analysis Configuration
MAX_ANALYSIS_DEPTH=10
ENABLE_SYMBOLIC_EXECUTION=true
ENABLE_FUZZING=true
ENABLE_INVARIANT_DETECTION=true

# Planning Configuration
MAX_PLANNING_STEPS=50
ENABLE_MULTI_PATH=true
ENABLE_BACKTRACKING=true
PLANNING_STRATEGY=adaptive

# Execution Configuration
EXECUTION_MODE=fork
EXECUTION_TIMEOUT=300
GAS_LIMIT=30000000
ENABLE_STATE_DIFF=true

# Validation Configuration
MIN_CONFIDENCE=0.7
REQUIRE_POC=true
CROSS_VALIDATE=true
VALIDATION_ROUNDS=3

# Memory System Configuration
MEMORY_DB_PATH=./data/memory.db
ENABLE_LEARNING=true
PATTERN_UPDATE_THRESHOLD=0.8

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/aaeds.log
ENABLE_DEBUG_MODE=false

# Security Configuration
ENABLE_SAFE_MODE=true
MAX_FUNDS_AT_RISK_WARNING=1000000
REQUIRE_USER_CONFIRMATION=false

# API Configuration (for future web interface)
API_HOST=0.0.0.0
API_PORT=8080
API_KEY=your_api_key_here

# Notification Configuration
ENABLE_NOTIFICATIONS=false
DISCORD_WEBHOOK_URL=
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Performance Configuration
MAX_WORKERS=4
ENABLE_CACHING=true
CACHE_TTL=3600